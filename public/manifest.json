{
  "manifest_version": 3,
  "name": "Text Highlight",
  "version": "1.0.0",
  "description": "A basic extension to highlight text on your webpage",
  "icons": {
    "32": "icon-32.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "/src/background.ts"
  },
  "permissions": ["contextMenus", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
